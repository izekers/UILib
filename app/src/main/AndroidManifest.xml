<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zoker.uilib">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="false"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MaterialImageViewActivity" />
        <activity android:name=".CameraActivity" />
        <activity android:name=".BottomNavigationActivity" />
        <activity android:name=".WebViewActivity" />
        <activity android:name=".ColorButtonActivity" />
        <activity android:name=".RecyclerActivity" />
        <activity android:name=".LargeImageActivity" />
        <activity android:name=".GifImageViewActivity" />
        <activity android:name=".TranslationActivity" />
        <activity
            android:name=".ListFragmentActivity"
            android:label="@string/title_activity_list_fragment"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SimpleListActivity"
            android:label="@string/title_activity_simple_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ConstraintActivity"
            android:label="@string/title_activity_constraint"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>